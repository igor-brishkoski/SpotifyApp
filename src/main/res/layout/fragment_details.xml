<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spotifystream.sptofyapp.activities.DetailsActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_albumart_holder"
        android:layout_height="@dimen/fragment_details_artwork_holder"
        android:background="#000000"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_details_albumart"
            android:layout_width="@dimen/fragment_details_artwork_holder"
            android:layout_height="@dimen/fragment_details_artwork_holder"
            android:padding="@dimen/padding_big"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_launcher"/>

        <com.spotifystream.sptofyapp.customizedviews.TypeFacedTextView
            android:layout_toRightOf="@id/iv_details_albumart"
            android:id="@+id/tv_details_realesed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="@dimen/padding_big"
            app:typeface="robotothin.ttf"
            android:text="2003"/>


        <com.spotifystream.sptofyapp.customizedviews.TypeFacedTextView
            android:layout_toRightOf="@id/iv_details_albumart"
            android:layout_above="@id/tv_details_realesed"
            android:id="@+id/tv_details_artistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="@dimen/padding_small"
            app:typeface="robotothin.ttf"
            android:text="Artist Astists"/>

        <com.spotifystream.sptofyapp.customizedviews.TypeFacedTextView
            android:layout_toRightOf="@id/iv_details_albumart"
            android:layout_above="@id/tv_details_artistname"
            android:id="@+id/tv_details_albumname"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:padding="@dimen/padding_small"
            app:typeface="robotothin.ttf"
            android:text="Album of Albums"/>

        </RelativeLayout>

    <ListView
        android:padding="@dimen/padding_big"
        android:id="@+id/lv_details_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_albumart_holder">
        </ListView>

</RelativeLayout>
